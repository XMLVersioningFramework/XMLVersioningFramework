# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                               controllers.Application.index()
POST    /                               controllers.Application.index()
POST    /commit                         controllers.Application.commit()
OPTIONS /								controllers.Application.checkPreFlight()
GET     /initRepository                 controllers.Application.initRepository()
#GET     /initRepository/:repositoryName controllers.Application.initRepository(repositoryName: String)
POST    /initRepository                 controllers.Application.initRepository()
#POST    /initRepository/:repositoryName controllers.Application.initRepository(repositoryName: String)
#GET     /add/:filepattern               controllers.Application.add(filepattern: String)
#GET     /commit/:message                controllers.Application.commit(message: String)

#POST    /sayHello                       controllers.Application.sayHello()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
